<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>

         <record id="view_vehicle_type_tree" model="ir.ui.view">
             <field name="name">vehicle.type.tree</field>
            <field name="model">vehicle.type</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Vehicles types">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_vehicle_type_form" model="ir.ui.view">
            <field name="name">vehicle.type.form</field>
            <field name="model">vehicle.type</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Vehicles types">
                    <group col="6" colspan="4">
                        <group col="4" colspan="4">
                            <field name="name"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_vehicle_type_filter" model="ir.ui.view">
            <field name="name">vehicle.type.list.select</field>
            <field name="model">vehicle.type</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Vehicles types">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="action_view_vehicle_type_form" model="ir.actions.act_window">
            <field name="name">Vehicles</field>
            <field name="res_model">vehicle.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</openerp>
